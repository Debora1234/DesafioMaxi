<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.App.Strating" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_splash_screen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/patita_perro_splash</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/descripcion</item>
        <item name="windowSplashScreenAnimationDuration">300</item>     //como es una imagen sin moviemiento no es necesaria
        <item name="postSplashScreenTheme"> @style/Theme.MyApplication </item>
    </style>
</resources>